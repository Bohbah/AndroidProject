<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CalendarFragment"
    android:orientation="vertical"
>

    <ImageView
        android:id="@+id/userOrgImageCLD"
        android:layout_width="64dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="180dp"
        android:contentDescription="Greek organization image image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/userImageCLD"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/presence_online"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/PreviousMessageCLD"
        android:layout_width="229dp"
        android:layout_height="96dp"
        android:layout_marginEnd="16dp"
        android:text="Previous Message"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="79dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/UserTagCLD"
        android:layout_width="122dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="username at"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userImageCLD"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:contentDescription="user profile picture"
        app:layout_constraintEnd_toStartOf="@+id/PreviousMessageCLD"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserTagCLD"
        app:srcCompat="@android:drawable/presence_invisible"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
